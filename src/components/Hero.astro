<div id="hero">
    <h1>Learn from the Past <br> Plan for the Future</h1>
    <p>HERITAGE CONSULTANTS, A LEADER IN <br>CULTURAL RESOURCE MANAGEMENT</p>
    <div id="hero--buttons">
        <a href="/#services" role="button">Our Services</a>
        <a href="/#contact" role="button">Contact Us</a>
    </div>
</div>

<style>
    #hero {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height:calc(100svh - 90px);
        width:100vw;
        background-color: #FFF;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        background-image:linear-gradient( rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/field.webp');
    }

    #hero > h1 {
        color:#fff;
        font-weight: 500;
        font-size: 67px;
        line-height: 82px;
        text-align: center;
        letter-spacing: .1rem;
        margin:0px;
    }
    #hero > p {
        color:#fff;
        font-weight: 300;
        font-size: 1.4rem;
        text-align: center;
        letter-spacing: .1rem;
        line-height: 36px;
        margin:32px 0px 48px 0px;
    }
    #hero--buttons {
        display: flex;
    }
    #hero--buttons > a {
        display: flex;
        align-items: center;
        justify-content: center;
        color:#FFF;
        border: 0px solid #fff;
        background-color: none;
        text-decoration: none;
        cursor: pointer;
        margin: 0px 40px;
        padding:12px 36px;
        font-size: 1.4rem;
        background-color: #0063A7;
        min-width: 206px;
        transition: background-color 200ms ease;
    }

    #hero--buttons > a:hover{
        cursor: pointer;
        background-color: #004575;
    }

    #hero--buttons > a:first-child {
        color:#FFF;
        border: 4px solid #fff;
        background-color: none;
        text-decoration: none;
        cursor: pointer;
        margin: 0px 40px;
        padding:12px 36px;
        font-size: 1.4rem;
        background-color: transparent;
        transition: border 200ms ease;
    }

    #hero--buttons > a:first-child:hover {
        border: 4px solid #0063A7;
    }

    @media only screen and (max-width: 700px) { 
        #hero{
            height:calc(100svh - 70px);
        }
        #hero > h1 {
            font-size: 2rem;
            line-height: 3rem;
        }
        #hero > p {
            font-size: 1rem;
            margin:40px 0px 56px 0px;
        }
        #hero--buttons{
            flex-direction: column;
            gap:16px;
            font-size: 1.2rem;
        }
    }

    @media only screen and (max-height: 400px) { 
        #hero{
            height:calc(100svh - 70px);
        }
        #hero > h1 {
            font-size: 2.4rem;
            line-height: 3.2rem;
        }
        #hero > p {
            font-size: 1rem;
            margin:16px 0px 30px 0px;
            line-height: 1.6rem;
        }

        #hero--buttons{
            flex-direction: row;
            gap:16px;
            font-size: 1.2rem;
        }
        #hero--buttons > a , #hero--buttons > a:first-child{
            margin: 0px 8px;
        }
    }


</style>