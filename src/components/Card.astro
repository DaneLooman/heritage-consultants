---
export interface Props {
	title: string;
	desc: string;
	href: string;
	image: string;
	tag: string;
	type: string;
}

const { title, desc, href, image, tag, type } = Astro.props;
---

<div class={`card ${type}`}>
	<p class="card--tag">{tag}</p>
	<a aria-label={`link to article ${title}`} class="card--image" href={href} style={`background-image: url("${image}?w=330&h=220"); background-position: center; background-repeat: no-repeat; background-size: cover;`}></a>
	<h3>{title}</h3>
	<hr>
	<p class="card--desc">{desc}</p>
	<a href={href} class="card--button" aria-label={`link to article ${title}`}>Read Article</a>
</div>
<style>
	.card {
		padding:16px;
		border:2px solid #0063A7;
		display: flex;
		flex-direction: column;
		align-items: center;
		background-color: #fff;
		color:#fff;
		position: relative;
		max-width: 367px;
		margin: 0 8px 32px 8px;
	}
	.card--tag{
		position: absolute;
		top:0px;
		right:16px;
		background-color: #0063A7;
		padding:4px;
		font-weight: 700;
		font-size: 1rem;
	}
	.card--image{
		width:330px;
		height:220px;
	}
	.card > h3 {
		color:#212121;
		text-align: center;
		font-weight: 700;
		font-size: 1.2rem;
		margin: 18px 0px;

	}
	.card > hr {
		width:90%;
		background-color:#0063A7;
		height:4px;
		margin:0px;
		border:0px solid #fff;
		border-radius: 4px;
	}
	.card--desc {
		color: #212121;
		font-weight: 400;
		line-height: 1.6rem;
		text-align: center;
	}
	.card--button {
		background-color:#0063A7;
		color:#fff;
        text-decoration: none;
        font-size: 1.2rem;
        padding: 12px 36px;
        margin-top:0px;
        width: fit-content;
		border:0px solid #fff;
		transition: background-color 200ms ease;
	}
	.card--button:hover{
		cursor: pointer;
        background-color: #004575;
	}

	/* Field Study turned Green */
	.card.\31 {
		border: 2px solid #537F69;
	}
	.card.\31 > .card--tag{
		background-color: #537F69;
	}
	.card.\31> hr{
		background-color: #537F69;
	}
	.card.\31 > .card--button{
		background-color: #537F69;
	}
	.card.\31 > .card--button:hover{
		background-color: #3a594a;
	}

	/* Announcement */
	.card.\32 {
		border: 2px solid #867365;
	}
	.card.\32 > .card--tag{
		background-color: #867365;
	}
	.card.\32 > hr{
		background-color: #867365;
	}
	.card.\32 > .card--button{
		background-color: #867365;
	}
	.card.\32 > .card--button:hover{
		background-color: #5e5147;
	}

	@media only screen and (max-width: 1200px) { 
		.card {
			margin: 0 4px 32px 4px;
		}

	}

</style>