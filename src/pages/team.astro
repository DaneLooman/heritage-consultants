<script>

    let twoWideImages = document.querySelectorAll(".twoWide--title > img")

    for (var i = 0; i < twoWideImages.length; i++) {
        twoWideImages[i].addEventListener('click', function(e){
            let id = `overlay--text--${e.target.dataset.p}`
            console.log(id)
            document.getElementById(id).style.display = "block";
            document.getElementById("overlay").style.display = "flex";
        })
    };

    let managers= document.querySelectorAll(".managers--title > img")

    for (var i = 0; i < managers.length; i++) {
        managers[i].addEventListener('click', function(e){
            let id = `overlay--text--${e.target.dataset.p}`
            console.log(id)
            document.getElementById(id).style.display = "block";
            document.getElementById("overlay").style.display = "flex";
        })
    };

    document.getElementById("overlay--button").onclick = function(){
        document.getElementById("overlay").style.display = "none";
        let ps = document.getElementsByClassName("overlay--text")
        for (var i = 0; i < ps.length; i++) {
            ps[i].style.display="none"
        };
    };
</script>